#:kivy 1.10.0

<PongGame>:
    # this var 'ball' is referenced from ObjectProperty in py
    ball: pong_ball
    canvas:
        #Color: 
            #rgb: .7, .7, .1, .5
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height


    Label:
        font_size: 70
        center_x: root.width / 4
        center_y: root.height / 2
        text: "0"


    Label:
        font_size: 70
        center_x: root.width / 4 * 3
        center_y: root.height / 2
        text: "0"

    PongBall:
        id: pong_ball
        center: self.parent.center




<PongBall>:
    size: 50, 50
    canvas: 
        Ellipse:
            pos: self.pos
            size: self.size





	